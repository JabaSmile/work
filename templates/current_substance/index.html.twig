{% extends 'base.html.twig' %}

{% block title %}CurrentSubstance index{% endblock %}

{% block body %}
    <h1>CurrentSubstance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for current_substance in current_substances %}
            <tr>
                <td>{{ current_substance.id }}</td>
                <td>{{ current_substance.title }}</td>
                <td>
                    <a href="{{ path('current_substance_show', {'id': current_substance.id}) }}">show</a>
                    <a href="{{ path('current_substance_edit', {'id': current_substance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('current_substance_new') }}">Create new</a>
{% endblock %}
